<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.beerguide.BreweriesActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/breweryEditText"
        android:background="@color/icons"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/breweryAddButton"
        android:layout_alignStart="@+id/breweryAddButton"
        android:layout_alignRight="@+id/breweryAddButton"
        android:layout_alignEnd="@+id/breweryAddButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:textColor="@color/icons"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:text="Add to Favorites"
        android:id="@+id/breweryAddButton"
        android:layout_below="@+id/breweryEditText"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/breweryAddButton"
        android:id="@+id/breweriesListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
